= render "modules/header"

%main
  .accountContent
    = render "users/shared/error_messages", resource: resource
    %h2.title 会員情報登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .accountForm
        .required &ensp;必須
        .fieldEmail
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "fieldEmail__input", placeholder: "PC・携帯どちらでも可"
        .required &ensp;必須
        .fieldPassword
          = f.label :password
          = f.password_field :password, autocomplete: "new-password", class: "fieldPassword__input"
        .fieldGuide &ensp;＊ 半角英数字７文字以上で設定して下さい
        .required &ensp;必須
        .fieldPassword
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "fieldPassword__input"
        .checkField
          = check_box_tag :check
          = label_tag :check, "パスワードを表示する", class: "checkbox"
        .sign_up
          = f.submit "登録内容を確認する", class:"sign_up__btn"

= render "modules/footer"