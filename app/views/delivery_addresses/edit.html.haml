= render "modules/header"

.titleBox
  %h2.title Delivery Address
  %h3.subtitle (お届け先変更)

%main.mypage
  = render "modules/sidebar"

  .mypageContent
    = render "users/shared/error_messages", resource: @DeliveryAddress
    = form_with model: @DeliveryAddress, local: true do |f|
      .deliveryAddressForm
        .required &ensp;必須
        .fieldForm
          = label_tag 'お名前'
          .fieldForm__name
            = f.text_field :last_name, class: "fieldForm__name__input", placeholder: "姓"
            = f.text_field :first_name, class: "fieldForm__name__input", placeholder: "名"
        .required &ensp;必須
        .fieldForm
          = label_tag 'お名前(カナ)'
          .fieldForm__name
            = f.text_field :phonetic_last_name, class: "fieldForm__name__input", placeholder: "セイ"
            = f.text_field :phonetic_first_name, class: "fieldForm__name__input", placeholder: "メイ"
        .required &ensp;必須
        .fieldForm
          = f.label :postal_code, "郵便番号"
          = f.text_field :postal_code, class: "fieldForm__input", placeholder: "〒"
        .fieldGuide &ensp;＊ 例：1234567（ハイフンなし・半角）
        .required &ensp;必須
        .fieldForm
          = f.label :prefecture_id, "都道府県"
          = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "選択して下さい"}, {class: "fieldForm__selector"}
        .required &ensp;必須
        .fieldForm
          = f.label :city, "市区町村"
          = f.text_field :city, class: "fieldForm__input", placeholder: "市区町村"
        .required &ensp;必須
        .fieldForm
          = f.label :ward, "番地"
          = f.text_field :ward, class: "fieldForm__input", placeholder: "番地"
        .option &ensp;任意
        .fieldForm
          = f.label :building, "建物名"
          = f.text_field :building, class: "fieldForm__input", placeholder: "ビル・マンション名"
        .option &ensp;任意
        .fieldForm
          = f.label :phone_number, "電話番号"
          = f.text_field :phone_number, class: "fieldForm__input", placeholder: "電話番号"
        .fieldGuide &ensp;＊ 例：09012345678（ハイフンなし・半角）
        .update
          = f.submit "お届け先住所を変更する", class:"update__btn"
          %br/
          = link_to "一覧に戻る", users_delivery_address_path, class: "update__link"


= render "modules/footer"